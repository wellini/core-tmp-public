<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.2"
                 xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd">

    <entity class="io.roadmaps.core.domain.model.course.Course">
        <table name="course" />
        <attributes>
            <id name="id">
                <column name="id" />
            </id>

            <many-to-one name="author" fetch="EAGER">
                <join-column name="author_id" />
            </many-to-one>

            <!-- TODO: !!!EAGER FETCH!!! Make it lazy and make code that uses this field transactional before go to prod!-->
            <one-to-many name="modules" target-entity="io.roadmaps.core.domain.model.module.Module" fetch="EAGER" orphan-removal="true">
                <order-column name="order_id" nullable="false" updatable="true" insertable="true" />
                <join-column name="course_id" />
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>

            <!-- TODO: !!!EAGER FETCH!!! Make it lazy and make code that uses this field transactional before go to prod!-->
            <one-to-many
                    name="courseAffiliations"
                    target-entity="io.roadmaps.core.domain.model.courseAffiliation.CourseAffiliation"
                    fetch="EAGER"
                    access="PROPERTY"
                    orphan-removal="true"
            >
                <join-column name="course_id" />
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>

            <embedded name="presentation" />
            <transient name="affiliations"/>
        </attributes>
    </entity>

    <embeddable class="io.roadmaps.core.domain.model.course.presentation.Presentation">
        <attributes>
            <basic name="title">
                <column name="title" />
            </basic>
            <basic name="coverUrl">
                <column name="cover_url" />
            </basic>
            <basic name="coverTheme">
                <column name="cover_theme" />
                <enumerated>STRING</enumerated>
            </basic>
        </attributes>
    </embeddable>

    <converter
            class="io.roadmaps.core.integrations.jpa.converters.CourseCoverThemeConverter"
            auto-apply="true" />
</entity-mappings>
