<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.2"
                 xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd">

    <entity class="cc.roadmaps.core.domain.model.leaf.Leaf" name="Leaf">
        <table name="leaves" />
        <discriminator-column name="type" discriminator-type="STRING"/>
        <attributes>
            <id name="id">
                <column name="id" />
            </id>
            <basic name="title">
                <column name="title" />
            </basic>
            <basic name="type">
                <column name="type" insertable="false" updatable="false" />
                <enumerated>STRING</enumerated>
            </basic>
            <basic name="moduleId">
                <column name="module_id" />
            </basic>
        </attributes>
    </entity>

    <converter
            class="cc.roadmaps.core.service.integrations.jpa.converters.LeafTypeConverter"
            auto-apply="true" />
</entity-mappings>
